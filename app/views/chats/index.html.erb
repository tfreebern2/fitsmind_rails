<div class="container-fluid">
  <div class="col-sm-8 col-sm-offset-2">
    <h1 class="text-center">Chat Index Page</h1>
    <br />

    <div class="col-sm-6">
      <h3 class="text-center">Sent Messages</h3>
      <hr />
      <% @chats.each do |chat| %>
        <% if current_user.id == chat.user_id %>
          <b>Receiver:</b> <%= chat.chat_receiver %>
          <br />
          <b>Message:</b> <%= chat.message %>
          <br />
          <b>Sent At:</b> <i><%= chat.created_at %></i>
          <br />
          <br />
          <br />
        <% end %>
      <% end %>
    </div>

    <div class="col-sm-6">
      <h3 class="text-center">Received Messages</h3>
      <hr />
      <% @chats.each do |chat| %>
        <% if current_user.id == chat.chat_receiver %>
          <b>Sender:</b> <%= chat.user_id %>
          <br />
          <b>Message:</b> <%= chat.message %>
          <br />
          <b>Sent At:</b> <i><%= chat.created_at %></i>
          <br />
          <br />
          <br />
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<br />
<div class="container-fluid">
  <div class="col-sm-8 col-sm-offset-2">
    <%= link_to 'Create New Chat', new_chat_path, class: 'btn btn-primary' %>
  </div>
</div>
